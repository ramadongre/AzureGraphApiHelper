
@model AzureWebUIapp.Models.GuestUserModel

@{
    ViewBag.Title = "Create Guest Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("CreateGuestUser", "Users"))
{
    <h1>Add guest user</h1>
    <hr />
    <div class="row" style="padding-top:20px">
        <div class="col-md-12 form-group">
            <div class="col-sm-3">
                @Html.LabelFor(a => a.UserDisplayName)
            </div>
            <div class="col-sm-5">
                @Html.TextBoxFor(a => a.UserDisplayName, new { Class = "form-control" })
            </div>
        </div>
        <div class="col-md-12 form-group">
            <div class="col-sm-3">
                @Html.LabelFor(a => a.UserEmailAddress)
            </div>
            <div class="col-sm-5">
                @Html.TextBoxFor(a => a.UserEmailAddress, new { Class = "form-control" })

            </div>
        </div>
        <div class="col-md-12 form-group">
            <div class="col-sm-3">
                @Html.LabelFor(a => a.WelcomeMessage)
            </div>
            <div class="col-sm-5">
                @Html.TextAreaFor(a => a.WelcomeMessage, new { Class = "form-control", Styles = "rows=10" })
            </div>
        </div>
        <div class="col-md-12 form-group">
            <div class="col-sm-3">
                @Html.LabelFor(a => a.phone)
            </div>
            <div class="col-sm-5">
                @Html.TextBoxFor(a => a.phone, new { Class = "form-control" })
            </div>
        </div>
        <div class="col-md-12 form-group">
            <div class="col-sm-3">
                @Html.LabelFor(a => a.department)
            </div>
            <div class="col-sm-5">
                @Html.TextBoxFor(a => a.department, new { Class = "form-control" })
            </div>
        </div>
        <div class="col-md-12 form-group">
            <div class="col-sm-3">
            </div>
            <div class="col-sm-5">
                <input type="submit" name="InviteGuestUser" value="Invite guest user" class="btn btn-primary" style="align-content:center" />
            </div>
        </div>
    </div>
}




