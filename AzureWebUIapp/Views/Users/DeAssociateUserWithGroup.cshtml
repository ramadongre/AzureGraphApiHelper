

@model AzureWebUIapp.Models.UserGroupAssociation

@{
    ViewBag.Title = "Remove user from a group";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Remove user from a group</h1>
<hr />
@using (Html.BeginForm("DeAssociateUserWithGroup", "Users"))
{
    <div class="row" style="padding-top:20px">        
        <div class="col-md-12 form-group">
            <div class="col-sm-3">
                @Html.LabelFor(a => a.UserEmailAddress)
            </div>
            <div class="col-sm-5">
                @Html.TextBoxFor(a => a.UserEmailAddress, new { Class = "form-control" })

            </div>
        </div>       
        <div class="col-md-12 form-group">
            <div class="col-sm-3">
                @Html.LabelFor(a => a.GroupName)
            </div>
            <div class="col-sm-5">
                @Html.TextBoxFor(a => a.GroupName, new { Class = "form-control" })
            </div>
        </div>
        <div class="col-md-12 form-group">
            <div class="col-sm-3">
            </div>
            <div class="col-sm-5">
                <input type="submit" name="userdeassociate" value="Remove user from group" class="btn btn-primary" style="align-content:center" />
            </div>
        </div>
    </div>
}


